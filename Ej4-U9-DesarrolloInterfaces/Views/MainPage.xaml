<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej4_U9_DesarrolloInterfaces.Views.MainPage"
             xmlns:modelos="clr-namespace:Ej4_U9_DesarrolloInterfaces.ViewModels">
    <ContentPage.BindingContext>
        <modelos:clsViewModelEj4/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
        <HorizontalStackLayout VerticalOptions="Center">
            <Label Text="Nombre"/>
            <Entry Text="{Binding Nombre}" WidthRequest="100"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout VerticalOptions="Center">
            <Label Text="Apellidos"/>
            <Entry Text="{Binding Apellidos}" WidthRequest="100"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
