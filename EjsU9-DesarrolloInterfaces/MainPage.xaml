<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjsU9_DesarrolloInterfaces.MainPage">

    <VerticalStackLayout>
        <Slider x:Name="sliderEj1" Minimum="8" Maximum="60"/>
        <Entry x:Name="entryEj1" BindingContext="{x:Reference sliderEj1}"  IsReadOnly="True" Text="{Binding Path=Value, StringFormat='{0:F0}'}" />
        <Label x:Name="lblEj1" FontSize="{Binding Path=Value}" BindingContext="{x:Reference sliderEj1}" Text="Texto Genérico"/>
    </VerticalStackLayout>

 </ContentPage>
